@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />
    <title>Employees Management Application - PPECB Assessment</title>
    @Styles.Render("~/Content/css")
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,700,600,800,300italic,400italic,600italic' rel='stylesheet' type='text/css'>
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="20" class="hold-transition" style="font-family: Raleway">
    <div class="wrapper">
        <div class="content-wrapper">
            <div class="box-body" style="padding-top: 1.0em; display: block;" id="employees-home">
                <div style="width: 100%; background-color: white; border-width: 1px; padding-left: 0.2em; font-size: 12px;">
                    <table cellpadding="0" cellspacing="0" style="width: 100%;">
                        <tr>
                            <td style="width: 50%; text-align: left;" valign="top">
                                <div>
                                    <div class="alert alert-link alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <div style="padding-top: 0.5em; padding-bottom: 0.5em; border: 0px solid ghostwhite; border-radius: 9px; padding-right: 0.5em;">
                                            <div class="list-group-item" style="background-color: ghostwhite; padding-left: 0.8em; padding-right: 0.8em;">
                                                <h4>Employees Management Application</h4> This application allows you to manage employee details
                                            </div>
                                        </div>
                                    </div>
                                    <table style="padding-top: 0.5em; width: 100%;">
                                        <tr>
                                            <td style="text-align: left; padding-left: 0.2em; padding-bottom: 0.2em; padding-top: 0.5em; font-size: 12px;">
                                                <div class="col-md-6">
                                                    <table id="employees-items" style="width: 100%;" class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Firstname</th>
                                                                <th>Lastname</th>
                                                                <th>DOB</th>
                                                                <th>Gender</th>
                                                                <th>Department</th>
                                                                <th>Active</th>
                                                                <th id="employees-items-header" style="padding-bottom: 0.5em;"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="employees-items-body"></tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <th></th>
                                                                <th></th>
                                                                <th></th>
                                                                <th></th>
                                                                <th></th>
                                                                <th></th>
                                                                <th></th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                    <div style="display: block;">
                                                        <form id="fmEmployees">
                                                            <div class="form-group has-feedback">
                                                                <label for="firstname">Firstname:</label>
                                                                <input type="text" class="form-control" maxlength="75" placeholder="Firstname" title="Firstname" id="firstname" name="firstname" required autofocus />
                                                                <input type="hidden" id="id" name="id" value="0" />
                                                            </div>
                                                            <div class="form-group has-feedback">
                                                                <label for="lastname">Lastname:</label>
                                                                <input type="text" class="form-control" maxlength="75" placeholder="Lastname" title="Lastname" id="lastname" name="lastname" required />
                                                            </div>
                                                            <div class="form-group has-feedback">
                                                                <label for="dob">D.O.B:</label>
                                                                <input type="date" class="form-control" placeholder="DOB" title="DOB" id="dob" name="dob" required />
                                                            </div>
                                                            <div class="form-group has-feedback">
                                                                <label for="gender">Gender:</label>
                                                                <select id="gender" name="gender">
                                                                    <option value="F" selected>Female</option>
                                                                    <option value="M">Male</option>
                                                                </select>
                                                            </div>
                                                            <div class="form-group has-feedback">
                                                                <label for="department">Department:</label>
                                                                <select id="department" name="department">
                                                                    <option value="IT" selected>I.T</option>
                                                                    <option value="Marketing">Marketing</option>
                                                                </select>
                                                            </div>
                                                            <div class="form-group has-feedback">
                                                                <label for="gender">Active:</label>
                                                                <input type="checkbox" id="active" name="active" checked value="1" />
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-xs-8">
                                                                    <button type="button" id="cancel-employees-btn" class="btn btn-default btn-block btn-flat" disabled>Cancel</button>
                                                                </div>
                                                                <div class="col-xs-4">
                                                                    <button type="button" id="save-employees-btn" class="btn btn-default btn-block btn-flat" disabled>Save</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal fade" id="modal-task">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title">Task Completed</h4>
                        </div>
                        <div class="modal-body">Task completed successfully</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="modal-task-failed">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title">Task Failed</h4>
                        </div>
                        <div class="modal-body">Task could not be completed. Refresh page (F5) or try again</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/dist")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/app")
</body>
</html>
